<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sap.mapper.CommMapper">

	<insert id="write">
		insert into board(title,content,name)
		values(#{title},#{content},#{name})
	</insert>
	<select id="list" resultType="org.sap.model.BoardDto">
		select *
		from board
	</select>
	<select id="detail" resultType="org.sap.model.BoardDto">
		select *
		from board
		where bno=#{bno}
	</select>

</mapper>